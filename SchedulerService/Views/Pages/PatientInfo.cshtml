@using Web.Models.ViewModels
@model PatientInformationPageModel

@{
    ViewData["Title"] = "PatientInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<partial name="~/Views/Shared/_NavbarPartial.cshtml" for="NavbarModel" />

<div id="layoutSidenav">

    <partial name="~/Views/Shared/_SidebarPartial.cshtml" for="NavbarModel" />

    <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-4 mt-3 text-center">
                        <h1 class="mt-4">
                            <strong>@Model.FirstName @Model.LastName</strong>
                        </h1>
                        <h2>
                            <img class="img-fluid px-3 px-sm-4 mt-3 mb-4" style="width: 23rem;" src="~/img/undraw_doctor_kw5l.svg" alt="">
                        </h2>
                    </div>
                    <div class="col-7 mt-5">
                        <div class="card mt-4">
                            <div class="card-header">
                                <h6 class="m-0">Personal Information</h6>
                            </div>
                            <div>
                                <table class="table table-striped m-0" width="100%" cellspacing="0">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th>Date of Birth</th>
                                            <td>@Model.DateOfBirth</td>
                                        </tr>
                                        <tr>
                                            <th>Bed</th>
                                            <td>@Model.Bed</td>
                                        </tr>
                                        <tr>
                                            <th>Room</th>
                                            <td>@Model.Room</td>
                                        </tr>
                                        <tr>
                                            <th>Ward</th>
                                            <td>@Model.Ward</td>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                  
                <div class="card mb-4 mt-4">
                    <div class="card-header">
                        <h6 class="m-0">Pending Medication</h6>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered table-hover" id="pendingMedicationTable" width="100%" cellspacing="0">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Drug</th>
                                    <th>Dose</th>
                                    <th>Time</th>
                                    <th>Status</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    for (int i = 0; i < Model.PendingMedications.Count; i++)
                                    {
                                        <tr>
                                            <td>
                                                @* <a href="/drug?prescriptionId=@Model.PendingMedications[i].PrescriptionId">*@
                                                @Model.PendingMedications[i].DrugName
                                                @*</a> PrescriptionID needs to be exposed*@
                                            </td>
                                            <td>@Model.PendingMedications[i].Dosage</td>
                                            <td>@Model.PendingMedications[i].Time</td>
                                            <td style="color:darkred">
                                                <strong>Ready</strong>
                                            </td>
                                            <td>
                                                <div class="input-group-append">
                                                    <a href="/administration?odfId=@Model.PendingMedications[i].OdfId&patientId=@Model.PatientId"
                                                        class="btn btn-primary"><strong>Verify Administration</strong></a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
  
                <div class="card mb-4">
                    <div class="card-header"><h6 class="m-0">Administered Medication</h6></div>
                    <div class="card-body">
                        <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Drug</th>
                                    <th>Dose</th>
                                    <th>Time</th>
                                    <th>Nurse</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    for (int i = 0; i < Model.AdministeredMedications.Count; i++)
                                    {
                                        <tr>
                                            <td>@Model.AdministeredMedications[i].DrugName</td>
                                            <td>@Model.AdministeredMedications[i].Dosage</td>
                                            <td>@Model.AdministeredMedications[i].Time</td>
                                            <td>@Model.AdministeredMedications[i].NurseName</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>
        <footer class="py-4 bg-light mt-auto">
            <div class="container-fluid">
                <div class="d-flex align-items-center justify-content-between small">
                    <div class="text-muted">Copyright &copy; Sample Website 2020</div>
                    <div>
                        <a href="#">Privacy Policy</a>
                        &middot;
                        <a href="#">Terms &amp; Conditions</a>
                    </div>
                </div>
            </div>
        </footer>
        <script src="js/scripts.js"></script>
    </div>
</div>
