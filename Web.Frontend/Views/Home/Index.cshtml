@model Web.Models.ViewModels.HomePageModel
@using Web.Models.ViewModels
@{
    ViewData["Title"] = "Index";
}
<nav class="navbar sticky-top navbar-light bg-primary">
    <img src="~/node_modules//bootstrap-icons/icons/arrow-left.svg" alt="" width="32" height="32" title="Bootstrap">
    <img src="~/node_modules//bootstrap-icons/icons/house.svg" alt="" width="32" height="32" title="Bootstrap">
</nav>

<div class="container bg-light">
    <div class="d-flex align-items-center p-3 my-3 text-white-50 bg-primary rounded shadow-sm">
        <h6 class="h6 text-white">Batches</h6>
    </div>
    <div class="bg-light">
        @for (int i = 0; i < Model.ODFs.Count; i++)
        {
            <div class="row">
                <div class="col-2">
                    <a class="bg-white">@Model.ODFs[i].PatientName</a>
                </div>
                <div class="col-2">
                    <a class="bg-white">@Model.ODFs[i].MedicationName</a>
                </div>
            </div>
        }
    </div>
</div>
