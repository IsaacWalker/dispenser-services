@model Web.Models.ViewModels.HomePageModel
@using Web.Models.ViewModels
@{
    ViewData["Title"] = "Index";
}
<nav class="navbar sticky-top navbar-light bg-primary">
</nav>


<div class="container bg-light">
    <div class="d-flex align-items-center p-3 my-3 text-white-50 bg-primary rounded shadow-sm">
        <h6 class="h6 text-white">Batches</h6>
    </div>
    <div class="bg-light">
        @for (int i = 0; i < Model.ODFs.Count; i++)
        {
            <div class="row">
                <div class="col-2">
                    <a href="/patient?patientId=@Model.ODFs[i].PatientId" class="btn btn-info" role="button">@Model.ODFs[i].PatientName</a>
                </div>
                <div class="col-2">
                    <a href="/drug?prescriptionId=@Model.ODFs[i].PrescriptionId" class="btn btn-info" role="button">@Model.ODFs[i].MedicationName</a>
                </div>
            </div>
        }
    </div>
</div>
