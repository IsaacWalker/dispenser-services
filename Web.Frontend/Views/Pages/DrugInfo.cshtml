@model Web.Models.ViewModels.DrugInformationPageModel
@using Web.Models.ViewModels

@{
    ViewData["Title"] = "DrugInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
    <a class="navbar-brand" href="index">Nurse Name</a>
    <button class="btn btn-link btn-sm order-1 order-lg-0" id="sidebarToggle" href="#"><i class="fas fa-bars"></i></button>
    <!-- Navbar Search-->
    <form class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0">
        <div class="input-group">
            <input class="form-control" type="text" placeholder="Search for..." aria-label="Search" aria-describedby="basic-addon2">
            <div class="input-group-append">
                <button class="btn btn-primary" type="button"><i class="fas fa-search"></i></button>
            </div>
        </div>
    </form>
    <!-- Navbar-->
    <ul class="navbar-nav ml-auto ml-md-0">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" id="userDropdown" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                <a class="dropdown-item" href="#">Settings</a><a class="dropdown-item" href="#">Activity Log</a>
                <div class="dropdown-divider"></div><a class="dropdown-item" href="login.html">Logout</a>
            </div>
        </li>
    </ul>
</nav>


<main>

    <div class="container-fluid">
        <h1 class="mt-4">Drug Information</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="index">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="">Patient Name @Model.PatientName</a></li>
            <li class="breadcrumb-item active">DRUG INFORMATION</li>
        </ol>
    </div>

    <div class="container-fluid">

        <h1 class="mt-4">@Model.DrugName <small>Status: @Model.Status</small></h1>

        <div class="card mb-4">
            <div class="card-header bg-primary text-white">@Model.PatientName's Prescription</div>

            <div class="card-body">
                <div class="row">
                    <div class="col-4 themed-grid-col text-primary"><h5>DOSAGE</h5></div>
                    <div class="col-4 themed-grid-col text-primary"><h5>ROUTE</h5></div>
                    <div class="col-4 themed-grid-col text-primary"><h5>INDICATION</h5></div>
                </div>
                <div class="row">
                    <div class="col-4 themed-grid-col">@Model.Dosage</div>
                    <div class="col-4 themed-grid-col">@Model.Route</div>
                    <div class="col-4 themed-grid-col">@Model.Indication</div>
                </div>
                <hr class="my-3">
                <div class="row">
                    <div class="col-8 themed-grid-col text-primary"><h5>PRESCRIBED BY</h5></div>
                    <div class="col-4 themed-grid-col text-primary"><h5>MAX FREQ.</h5></div>
                </div>
                <div class="row">
                    <div class="col-8 themed-grid-col">Dr. Mantis Toboggan</div>
                    <div class="col-4 themed-grid-col">@Model.MaxFrequency</div>
                </div>
                <hr class="my-3">
                <div class="row">
                    <div class="col-12 themed-grid-col text-primary"><h5>NOTES</h5></div>
                </div>
                <div class="row">
                    <div class="col-8 themed-grid-col">Take following meal. @Model.Notes</div>
                </div>

            </div>
            <div class="card-body">
                <p class="mb-0"></p>
            </div>
        </div>

        <!--Perscription History Table-->
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">@Model.DrugName Administration History</div>
            <div class="table-responsive">
                <table class="table table-striped table-sm text-center text-primary">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Time</th>
                            <th>Dose</th>
                            <th>Given By</th>
                            <th>Batch</th>
                            <th>Expiry</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    </div>

</main>

<footer class="py-4 bg-light mt-auto">
    <div class="container-fluid">
        <div class="d-flex align-items-center justify-content-between small">
            <div class="text-muted">Copyright &copy; Sample Website 2020</div>
            <div>
                <a href="#">Privacy Policy</a>
                &middot;
                <a href="#">Terms &amp; Conditions</a>
            </div>
        </div>
    </div>
</footer>

<script src="~/js/scripts.js"></script>