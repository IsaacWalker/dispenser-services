@using Web.Models.ViewModels
@model PatientInformationPageModel
@{
    ViewData["Title"] = "PatientInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
    <a class="navbar-brand" href="index.html">@Model.NurseFirstName @Model.NurseLastName</a>
    <button class="btn btn-link btn-sm order-1 order-lg-0" id="sidebarToggle" href="#"><i class="fas fa-bars"></i></button>
    <!-- Navbar Search-->
    <form class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0">
        <div class="input-group">
            <input class="form-control" type="text" placeholder="Search for..." aria-label="Search" aria-describedby="basic-addon2">
            <div class="input-group-append">
                <button class="btn btn-primary" type="button"><i class="fas fa-search"></i></button>
            </div>
        </div>
    </form>
    <!-- Navbar-->
    <ul class="navbar-nav ml-auto ml-md-0">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" id="userDropdown" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                <a class="dropdown-item" href="#">Settings</a><a class="dropdown-item" href="#">Activity Log</a>
                <div class="dropdown-divider"></div><a class="dropdown-item" href="login.html">Logout</a>
            </div>
        </li>
    </ul>
</nav>

@* // TODO - REMOVE NAVBAR*@
<partial name="~/Views/Shared/_NavbarPartial.cshtml" for="NavbarModel" />

<main>
    <div class="container-fluid">
        <h1 class="mt-4">Patient Information </h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="index">Dashboard</a></li>
            <li class="breadcrumb-item active">Patient Information</li>
        </ol>
    </div>


    <div class="container-fluid">
        <h2 class="mt-4">@Model.FirstName @Model.LastName</h2>
        <div class="border-top my-3"></div>
        <div class="ml-2">
            <table class="table-condensed table-striped" id="dataTable" width="100%" cellspacing="0">
                <tr>
                    <th>Date of Birth</th>
                    <td>5th April 2020</td>
                </tr>
                <tr>
                    <th>Bed</th>
                    <td>@Model.Bed</td>
                </tr>
                <tr>
                    <th>Room</th>
                    <td>@Model.Room</td>
                </tr>
                <tr>
                    <th>Ward</th>
                    <td>@Model.Ward</td>
                </tr>
            </table>

        </div>
        <div class="card mb-4 mt-4">
            <div class="card-header" style="background-color: dodgerblue; color: white;"><strong>Pending Medication</strong></div>
            <div class="card-body">
                <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                    <thead class="thead-dark">
                        <tr>
                            <th>Drug</th>
                            <th>Dose</th>
                            <th>Time</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            for (int i = 0; i < Model.PendingMedications.Count; i++)
                            {
                                <tr>
                                    <td>@Model.PendingMedications[i].DrugName</td>
                                    <td>@Model.PendingMedications[i].Dosage</td>
                                    <td>@Model.PendingMedications[i].Time</td>
                                    <td style="color:darkred">
                                        <strong>Ready</strong>
                                    </td>
                                    <td>
                                        <div class="input-group-append">
                                            <a href="/administration?odfId=@Model.PendingMedications[i].OdfId&nurseId=@Model.NurseId&patientId=@Model.PatientId"
                                               class="btn btn-primary"><strong>Verify Administration</strong></a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card mb-4">
            <div class="card-header" style="background-color: dodgerblue; color: white;"><strong>Administered Medication</strong></div>
            <div class="card-body">
                <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                    <thead class="thead-dark">
                        <tr>
                            <th>Drug</th>
                            <th>Dose</th>
                            <th>Time</th>
                            <th>Nurse</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            for (int i = 0; i < Model.AdministeredMedications.Count; i++)
                            {
                                <tr>
                                    <td>@Model.AdministeredMedications[i].DrugName</td>
                                    <td>@Model.AdministeredMedications[i].Dosage</td>
                                    <td>@Model.AdministeredMedications[i].Time</td>
                                    <td>@Model.AdministeredMedications[i].NurseName</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</main>
<footer class="py-4 bg-light mt-auto">
    <div class="container-fluid">
        <div class="d-flex align-items-center justify-content-between small">
            <div class="text-muted">Copyright &copy; Sample Website 2020</div>
            <div>
                <a href="#">Privacy Policy</a>
                &middot;
                <a href="#">Terms &amp; Conditions</a>
            </div>
        </div>
    </div>
</footer>
<script src="js/scripts.js"></script>
